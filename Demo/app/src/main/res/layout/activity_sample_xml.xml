<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/container"
    android:background="@android:color/white">

    <!-- previously initilized Component / Attributes -->
    <lineto.org.components.Image
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:layout_width="91dp"
        android:layout_height="91dp"
        app:img_url="http://relivmobiles.com/wp-content/uploads/2014/05/android-3.png"
        app:img_placeholder="@drawable/no_image"
        app:img_local="false"
        />

    <!-- to be initialized programmatically -->
    <lineto.org.components.Image
        android:layout_marginTop="10dp"
        android:id="@+id/custom_image"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/black"
        android:layout_width="91dp"
        android:layout_height="91dp"
        />

</LinearLayout>
